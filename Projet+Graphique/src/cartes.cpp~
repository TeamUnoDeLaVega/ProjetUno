#include "cartes.hpp"

void setPosition(xPosition, yPosition){
  sprite.setPosition(xPosition, yPosition);
}

void update(){
  rect.setPosition(sprite.getPosition());
  if(Mouse::isButtonPressed(Mouse::Left)){
    Vector2i positionSouris= Mouse::getPosition(window);
    FloatRect positionsprite = sprite.getGlobalBounds();

    if(sprite.contains((Vector2f)positionSouris)){
      std::cout<<"window.draw(test)"<<std::endl;;
    }


}

